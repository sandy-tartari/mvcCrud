@model mvcCrud.Models.DB.Pessoa
@{  
    ViewData["Title"] = "Nova pessoa";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Novo">
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome</label>
                <input asp-for="Nome" class="form-control" type="text"/>
            </div>
            <div class="form-group">
                <label asp-for="Nascimento" class="control-label">Nascimento</label>
                <input asp-for="Nascimento" class="form-control" type="text"/>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" type="text"/>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Criar"/>
            </div>
        </form>
    </div>
</div>